CREATE TABLE EmailTemplates (
    EmailID INT IDENTITY(1,1) PRIMARY KEY,
    SenderEmail NVARCHAR(255) NOT NULL,
    RecipientEmails NVARCHAR(MAX) NOT NULL, -- can be comma-separated list
    Subject NVARCHAR(500) NOT NULL,
    Body NVARCHAR(MAX) NOT NULL, -- supports HTML
    CreatedDate DATETIME DEFAULT GETDATE()
);

INSERT INTO EmailTemplates (SenderEmail, RecipientEmails, Subject, Body)
VALUES (
    'no-reply@mycompany.com',
    'user1@mycompany.com;user2@mycompany.com',
    'File Archive Summary',
    '<h2>Archive Process Completed</h2><p>10 files moved successfully to archive.</p>'
);


public EmailTemplate GetEmailTemplate(int emailId)
{
    using (SqlConnection conn = new SqlConnection(_connectionString))
    {
        conn.Open();
        string query = "SELECT SenderEmail, RecipientEmails, Subject, Body FROM EmailTemplates WHERE EmailID = @EmailID";

        using (SqlCommand cmd = new SqlCommand(query, conn))
        {
            cmd.Parameters.AddWithValue("@EmailID", emailId);
            using (SqlDataReader reader = cmd.ExecuteReader())
            {
                if (reader.Read())
                {
                    return new EmailTemplate
                    {
                        SenderEmail = reader.GetString(0),
                        RecipientEmails = reader.GetString(1),
                        Subject = reader.GetString(2),
                        Body = reader.GetString(3)
                    };
                }
            }
        }
    }
    return null;
}
